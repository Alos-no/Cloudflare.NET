<?xml version="1.0" encoding="utf-8"?>
<!--
  Test run settings for Cloudflare.NET test projects.

  Integration tests create/modify shared resources in the Cloudflare account (access rules,
  DNS records, etc.). We disable parallel execution to prevent race conditions like
  "duplicate_of_existing" errors when multiple test processes try to create the same resource.
-->
<RunSettings>
  <RunConfiguration>
    <!--
      Disable parallel execution of target frameworks.
      Ensures net8.0 tests complete before net10.0 tests start (or vice versa).
    -->
    <DisableParallelization>false</DisableParallelization>
    <MaxCpuCount>1</MaxCpuCount>
  </RunConfiguration>
  <xUnit>
    <!--
      xUnit-specific settings.
      ParallelizeAssembly: false = don't run multiple test assemblies in parallel
      ParallelizeTestCollections: true = allow parallel within a single assembly (unit tests)
    -->
    <ParallelizeAssembly>false</ParallelizeAssembly>
    <ParallelizeTestCollections>true</ParallelizeTestCollections>
  </xUnit>
</RunSettings>
