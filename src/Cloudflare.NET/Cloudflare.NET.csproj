<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>Cloudflare.NET</RootNamespace>

    <!-- NuGet Package Properties (common properties inherited from Directory.Build.props) -->
    <PackageId>Cloudflare.NET.Api</PackageId>
    <Version>1.5.0</Version>
    <Description>Unofficial .NET SDK for the Cloudflare API, providing a strongly-typed interface for Cloudflare services.</Description>
    <PackageTags>cloudflare;api;sdk;alos;r2;firewall;dns</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="\" />
    <None Include="../../LICENSE.txt" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http.Resilience" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Allow the test project to access internal members for testing purposes. -->
    <InternalsVisibleTo Include="Cloudflare.NET.Tests, " />
  </ItemGroup>

</Project>